{
	"name"			: "ipub/ratchet",
	"type"			: "library",
	"description"	: "Extension for implementing WebSockets server side (Ratchet) & client side (Autobahn) into Nette Framework",
	"keywords"		: ["nette", "ratchet", "websockets", "ipub", "ipublikuj", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/ratchet",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/ratchet/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"ratchet" : "IPub\\Ratchet\\DI\\RatchetExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"cboden/ratchet": "~0.3.6",

		"nette/application"	: "~2.4",
		"nette/di"			: "~2.4",
		"nette/http"		: "~2.4",
		"nette/reflection"	: "~2.4",
		"nette/security"	: "~2.4",
		"nette/utils"		: "~2.4",

		"kdyby/console"	: "~2.6",
		"kdyby/events"	: "~3.0",

		"pds/skeleton"	: "^1.0",

		"psr/log"	: "~1.0"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.4",
		"nette/mail"			: "~2.4",
		"nette/robot-loader"	: "~2.4",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev"
	},

	"suggest": {
		"ext-libevent": ">=0.0.5",
		"ext-libev": "*",
		"ext-zmq": "*",
		"ext-amqp": "*"
	},

	"autoload": {
		"psr-0": {
			"IPub\\Ratchet\\": "src/"
		}
	},

	"bin": ["bin/ratchet-server", "bin/ratchet-server.php"]
}
